<!doctype html>
<html lang="pt-BR">
<head>
    <%- include('../templates/head'); %>
    <title>Livraria</title>
</head>

<body>
    <%- include('../templates/nav'); %>

    <div class="container">
        <div class="d-flex bd-highlight mb-3">
            <div class="me-auto p-2 bd-highlight">
                <h2>Books</h2>
            </div>
            <div class="p-2 bd-highlight">
                <button type="button" class="btn btn-secondary" onclick="showBookCreateBox()">Create</button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">
                            <a href="#" onclick="sortBy('title', event)">
                                <i data-sort-order="asc" class="table-sort d-none fas fa-arrow-up"></i> Title
                            </a>
                        </th>
                        <th scope="col">Author</th>
                        <th scope="col">Publication year</th>
                        <th scope="col">Pages</th>
                        <th scope="col">Category</th>
                        <th scope="col">Publisher</th>
                        <th scope="col">Format</th>
                        <th scope="col">
                            <a href="#" onclick="sortBy('price', event)">
                                <i data-sort-order="asc" class="table-sort d-none fas fa-arrow-up"></i> Price
                            </a>
                        </th>
                        <th scope="col" class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody id="mytable">
                    <tr>
                        <th scope="row" colspan="5">Loading...</th>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../templates/footer'); %>
    <script src="/book.js"></script>  
</body>
</html>